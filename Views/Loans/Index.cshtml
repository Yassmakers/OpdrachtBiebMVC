@using Microsoft.AspNetCore.Http
@model IEnumerable<BiebWebApp.Models.Loan>


<h1>List of Loans</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<form method="get">
    <div class="form-group">
        <label for="searchString">Search by user name or item name:</label>
        <input type="text" id="searchString" name="searchString" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>


@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Item</th>
                <th>Loan Date</th>
                <th>Return Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <td>@loan.User.Name</td>
                    <td>@loan.Item.Title</td>
                    <td>@loan.LoanDate</td>
                    <td>@loan.ReturnDate</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@loan.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@loan.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@loan.Id">Delete</a> |
                        <a asp-action="Return" asp-route-id="@loan.Id">Return Item</a> <!-- Added the "Return Item" button -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No loans found.</p>
}

<p>
    <a asp-action="Create">Create New Loan</a>
</p>
