@model BiebWebApp.Models.Loan

<h1>Create Loan</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserList"></select>
    </div>
    <div class="form-group">
        <label asp-for="ItemId" class="control-label"></label>
        <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemList"></select>
    </div>
    <div class="form-group">
        <label asp-for="LoanDate" class="control-label"></label>
        <input asp-for="LoanDate" class="form-control" />
        <span asp-validation-for="LoanDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReturnDate" class="control-label"></label>
        <input asp-for="ReturnDate" class="form-control" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
