@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <h1 class="display-4">Welcome <span id="username">@ViewData["Username"]</span></h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome, please log in</h1>
        <p>
            <a href="@Url.Action("Login", "Home")">Login</a> or
            <a href="@Url.Action("Register", "Home")">Register</a>
        </p>
    </div>
}

<!-- Add the following JavaScript code at the bottom of the file -->
<script>
    var usernameElement = document.getElementById("username");
    if (usernameElement.textContent === "") {
        usernameElement.textContent = "please log in";
    }
</script>
