@model BiebWebApp.Models.ProfileViewModel

<h3>Profile Information</h3>

<p>Name: @Model.User.Name</p>
<p>Email: @Model.User.Email</p>

<h4>Reservations</h4>
@if (Model.Reservations.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Reservation Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Reservations)
            {
                <tr>
                    <td>@item.Item.Title</td>
                    <td>@item.ReservationDate</td>
                    <td>
                        <!-- Add a details button to view more information about the reservation -->
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    </td>
                    <td>
                        <form method="post" action="@Url.Action("Delete", new { id = item.Id })" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reservations found.</p>
}

@if (TempData["Message"] != null)
{
    <div class="message success">@TempData["Message"]</div>
}
