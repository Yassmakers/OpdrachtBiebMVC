@model BiebWebApp.Models.RegisterModel

<h2>Create</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        @foreach (var value in ViewData.ModelState.Values)
        {
            @foreach (var error in value.Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        }
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<BiebWebApp.Models.UserType>()"></select>
    </div>

    <div class="form-group">
    <label asp-for="SelectedSubscription">Subscription</label>
    <select asp-for="SelectedSubscription" name="SelectedSubscription" class="form-control" id="subscription-select">
        <option value="">-- Select Subscription --</option>
        @foreach (var option in Model.SubscriptionOptions)
        {
            <option value="@option.Value">@option.Text</option>
        }
    </select>
    </div>

    <div class="form-group">
        <label asp-for="MaxItemsPerYear">Maximum Items per Year</label>
        <input asp-for="MaxItemsPerYear" class="form-control" readonly id="max-items-per-year" />
    </div>

    <div class="form-group">
        <label for="Password" class="control-label">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ConfirmPassword" class="control-label">Confirm Password</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<script>
    // JavaScript code to update MaxItemsPerYear instantly
    var subscriptionSelect = document.getElementById('subscription-select');
    var maxItemsPerYearInput = document.getElementById('max-items-per-year');

    subscriptionSelect.addEventListener('change', function () {
        var subscription = subscriptionSelect.value;
        var maxItemsPerYear = 0;

        switch (subscription) {
            case 'Youth':
                maxItemsPerYear = Number.POSITIVE_INFINITY;
                break;
            case 'Budget':
                maxItemsPerYear = 10;
                break;
            case 'Basic':
            case 'Top':
                maxItemsPerYear = Number.POSITIVE_INFINITY;
                break;
            default:
                maxItemsPerYear = 0;
                break;
        }

        maxItemsPerYearInput.value = maxItemsPerYear;
    });
</script>
