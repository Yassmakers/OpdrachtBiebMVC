@model BiebWebApp.Models.User

<h3>Delete User</h3>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <h5>Name: @Model.Name</h5>
    <h5>Email: @Model.Email</h5>
    <h5>Type: @Model.Type</h5>
</div>

<form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
